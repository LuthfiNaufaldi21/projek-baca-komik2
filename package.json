{
  "name": "komikita-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "KomiKita - Fullstack Comic Reading Platform (Monorepo)",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --workspace=apps/client",
    "dev:server": "npm run dev --workspace=apps/server",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=apps/client",
    "build:server": "npm run build --workspace=apps/server",
    "start:client": "npm run preview --workspace=apps/client",
    "start:server": "npm start --workspace=apps/server",
    "lint": "npm run lint --workspaces",
    "clean": "rimraf apps/*/node_modules apps/*/dist node_modules",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5"
  }
}
